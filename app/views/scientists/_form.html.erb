<ul>
<% if @scientist.errors.any? %>
    <%= @scientist.errors.full_messages.each do |msg|%>
    <li><%= msg %></li>
    <% end %>
<% end %>
</ul>


<%=form_for @scientist do |f|%>
<%=f.label :name%>
<%=f.text_field :name%><br/>
<br/>
<%=f.label :field_of_study%>
<%=f.text_field :field_of_study%><br/>
<br/>
<%=f.submit%>
<br/>
<% end %>