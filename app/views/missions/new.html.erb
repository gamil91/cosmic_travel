<ul>
<% if @mission.errors.any? %>
    <%= @mission.errors.full_messages.each do |msg|%>
    <li><%= msg %></li>
    <% end %>
<% end %>
</ul>


<h1>Mission Assignment</h1>

<%=form_for @mission do |f|%>
<%=f.label :name %>
<%=f.text_field :name%><br/></br>
<%=f.label "Scientists" %>
<%=f.collection_select :scientist_id, Scientist.all, :id, :name%><br/><br/>
<%=f.label "Planets" %>
<%=f.collection_select :planet_id, Planet.all, :id, :name%><br/><br/>

<br/>
<%=f.submit%>
<% end %>